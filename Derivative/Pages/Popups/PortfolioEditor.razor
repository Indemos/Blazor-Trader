<MudDialog>
  <TitleContent>
  </TitleContent>
  <DialogContent>

    @using System.ComponentModel.DataAnnotations

    <EditForm EditContext="@InputContext">
      <DataAnnotationsValidator />
      <MudTextField Label="Symbol" Variant="Variant.Text" Margin="Margin.Dense" Class="mt-3" @bind-Value="InputModel.Names" For="@(() => InputModel.Names)"></MudTextField>
      <MudTextField Label="Slope" Variant="Variant.Text" Margin="Margin.Dense" Class="mt-3" @bind-Value="InputModel.Slope" For="@(() => InputModel.Slope)"></MudTextField>
      <MudTextField Label="Count" Variant="Variant.Text" Margin="Margin.Dense" Class="mt-3" @bind-Value="InputModel.Count" For="@(() => InputModel.Count)"></MudTextField>
      <MudSelect Label="Period" Variant="Variant.Text" Margin="Margin.Dense" Class="mt-3" @bind-Value="InputModel.Duration" For="@(() => InputModel.Duration)">
        <MudSelectItem T="string" Value="@("Year")" />
        <MudSelectItem T="string" Value="@("Month")" />
        <MudSelectItem T="string" Value="@("Day")" />
        <MudSelectItem T="string" Value="@("Ytd")" />
      </MudSelect>
      <MudSelect Label="Frequency" Variant="Variant.Text" Margin="Margin.Dense" Class="mt-3" @bind-Value="InputModel.Resolution" For="@(() => InputModel.Resolution)">
        <MudSelectItem T="string" Value="@("Monhtly")" />
        <MudSelectItem T="string" Value="@("Weekly")" />
        <MudSelectItem T="string" Value="@("Daily")" />
        <MudSelectItem T="string" Value="@("Minute")" />
      </MudSelect>
      <MudPaper Class="py-6 d-flex justify-end" Elevation="0">
        <MudButton Variant="Variant.Filled" Color="Color.Error" OnClick="OnClose" Class="mr-3">Cancel</MudButton>
        <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="OnSuccess">Submit</MudButton>
      </MudPaper>
    </EditForm>

  </DialogContent>
</MudDialog>
