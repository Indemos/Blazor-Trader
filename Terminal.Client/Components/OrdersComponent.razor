@using Terminal.Core.ModelSpace

<MudTable Items="@Items" Hover="true" MultiSelection="true" SortLabel="Sort By" Elevation="0">
  <HeaderContent>
    <MudTh><MudTableSortLabel InitialDirection="SortDirection.Descending" SortBy="new Func<ITransactionOrderModel, object>(o => o?.Time)">Time</MudTableSortLabel></MudTh>
    <MudTh><MudTableSortLabel SortBy="new Func<ITransactionOrderModel, object>(o => o?.Instrument?.Name)">Instrument</MudTableSortLabel></MudTh>
    <MudTh><MudTableSortLabel SortBy="new Func<ITransactionOrderModel, object>(o => o?.Size)">Size</MudTableSortLabel></MudTh>
    <MudTh><MudTableSortLabel SortBy="new Func<ITransactionOrderModel, object>(o => o?.Side)">Side</MudTableSortLabel></MudTh>
    <MudTh><MudTableSortLabel SortBy="new Func<ITransactionOrderModel, object>(o => o?.Price)">Price</MudTableSortLabel></MudTh>
  </HeaderContent>
  <RowTemplate>
    <MudTd DataLabel="Time">@($"{ context?.Time?.ToString("yyyy-MM-dd HH:mm:ss") }")</MudTd>
    <MudTd DataLabel="Instrument">@context?.Instrument?.Name</MudTd>
    <MudTd DataLabel="Size">@context.Size</MudTd>
    <MudTd DataLabel="Side">@context.Side</MudTd>
    <MudTd DataLabel="Open Price">@context.Price</MudTd>
  </RowTemplate>
  <PagerContent>
    <MudTablePager PageSizeOptions="new int[]{50, 100}" />
  </PagerContent>
</MudTable>
