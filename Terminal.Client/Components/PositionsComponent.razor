@using Terminal.Core.ModelSpace

<MudTable Items="@Items" Hover="true" MultiSelection="true" SortLabel="Order" Elevation="0">
  <HeaderContent>
    <MudTh><MudTableSortLabel InitialDirection="SortDirection.Descending" SortBy="new Func<ITransactionPositionModel, object>(o => o?.Time)">Time</MudTableSortLabel></MudTh>
    <MudTh><MudTableSortLabel SortBy="new Func<ITransactionPositionModel, object>(o => o?.Instrument?.Name)">Instrument</MudTableSortLabel></MudTh>
    <MudTh><MudTableSortLabel SortBy="new Func<ITransactionPositionModel, object>(o => o?.Size)">Size</MudTableSortLabel></MudTh>
    <MudTh><MudTableSortLabel SortBy="new Func<ITransactionPositionModel, object>(o => o?.Side)">Side</MudTableSortLabel></MudTh>
    <MudTh><MudTableSortLabel SortBy="new Func<ITransactionPositionModel, object>(o => o?.Price)">Open Price</MudTableSortLabel></MudTh>
    <MudTh><MudTableSortLabel SortBy="new Func<ITransactionPositionModel, object>(o => o?.ClosePriceEstimate)">Close Price</MudTableSortLabel></MudTh>
    <MudTh><MudTableSortLabel SortBy="new Func<ITransactionPositionModel, object>(o => o?.GainLossAverageEstimate)">Gain</MudTableSortLabel></MudTh>
  </HeaderContent>
  <RowTemplate>
    <MudTd DataLabel="Time">@($"{context?.Time:yyyy-MM-dd HH:mm:ss}")</MudTd>
    <MudTd DataLabel="Instrument">@context?.Instrument?.Name</MudTd>
    <MudTd DataLabel="Size">@context.Size</MudTd>
    <MudTd DataLabel="Side">@context.Side</MudTd>
    <MudTd DataLabel="Open Price">@($"{context.Price:0.00}")</MudTd>
    <MudTd DataLabel="Close Price">@($"{context.ClosePriceEstimate:0.00}")</MudTd>
    <MudTd DataLabel="Gain">@($"{context.GainLossAverageEstimate:0.00}")</MudTd>
  </RowTemplate>
  <PagerContent>
    <MudTablePager PageSizeOptions="new int[]{50, 100}" />
  </PagerContent>
</MudTable>
